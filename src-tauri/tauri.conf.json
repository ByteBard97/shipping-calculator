{
  "$schema": "https://tauri.app/v1/config.schema.json",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../docs"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "identifier": "com.josephshay.amazon-seller",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "Amazon Seller Portal",
  "version": "1.0.0",
  "app": {
    "windows": [
      {
        "title": "Amazon Seller Portal",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
